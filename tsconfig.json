{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "ES6",
    "noImplicitAny": true,
    "outDir": "./build/",
    "sourceMap": true,
    "strict": true,
    "target": "ES5"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
